generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
}

type Purchase {
  category        String
  slug            String 
}
model User {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String    @unique
  image       String?
  role        Role?
  purchases   Purchase[]
}

model Order {
    id          String    @id @default(auto()) @map("_id") @db.ObjectId

    userEmail   String

    totalAmount Int
    status      OrderStatus
    paymentId   String?

    items Json

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

enum OrderStatus {
    PENDING
    SUCCEEDED
    CANCELLED
}

enum SubscriptionType {
  BASIC
  STANDARD
  PRO
}

model Subscription {
  id              String              @id @default(auto()) @map("_id") @db.ObjectId
  userEmail       String              @unique
  type            SubscriptionType    @default(BASIC)
  startDate       DateTime            @default(now())
  pricePlan       Int                 @default(0)
  endDate         DateTime?
  isDeactivated   Boolean             @default(false)
}

enum TopPostType {
  solution
  article
  util
}

model TopPost {
  id              String              @id @default(auto()) @map("_id") @db.ObjectId
  url             String              @unique
  price           Int
  logo            String            
  title           String
  type            TopPostType     
}

model Meeting {
  id              String              @id @default(auto()) @map("_id") @db.ObjectId
  slug            String              @unique
  url             String              
  title           String
  description     String            
  date            DateTime    
  duration        String     
}

model Count {
  id              String              @id @default(auto()) @map("_id") @db.ObjectId
  path            String              @unique
  solutions       Int              
  articles        Int
  utils           Int            
}